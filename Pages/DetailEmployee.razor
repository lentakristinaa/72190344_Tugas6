@page "/employeedetail/{id}"

@if(Employee == null || Employee.Department==null){
  <div class="spinner"></div>
}
else{
<h2><b> Detail Employee </b> </h2>
  <div class="row justify-content-center m-3">
      <div class="card-body text-center">
      <div class="col-sm-8">
        <h1>@Employee.FirstName @Employee.LastName</h1>
        <img class="card-img-top img-thumbnail"  src="@Employee.PhotoPath" 
            @onmousemove="@Mouse_Move"/>
        <h4>@Coordinates</h4>
        <div class="card-body"></div>
        <h4 class="card-text">Employee ID : @Employee.EmployeeId </h4>
        <h4 class="card-text">Email : @Employee.Email</h4>
        <h4 class="card-text">Department Name: @Employee.Department.DepartmentName</h4>
    </div>
    <button class="btn btn-primary" @onclick="@Button_Click">@ButtonText</button>
    <div class="card-footer text-center @CssClass">
        <a href="/employeepage" class="btn btn-secondary m-1">Back</a>
        <a href="/employeepage" class="btn btn-success m-1">Edit</a>
        <a href="/employeepage" class="btn btn-danger m-1">Delete</a>
        </div>
   </div>
</div>
}